[alias]
    a  = add
    aa = add -A
    c =  checkout
    co = checkout
    cb = checkout -b
    st = status
    s  = status -s
    sm  = submodule status
    cv = commit -v
    cva = commit -v --amend
    ci = commit -a
    cm = commit -m
    civ = commit -av
    civa = commit -av --amend
    d = diff
    dc = diff --cached
    br = branch
    wc = whatchanged
    p  = push
    rv = remote -v
    stat  = log --stat --summary
    g = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    l = log
    logg  = log --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --name-status
    logs  = log --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --stat
    logb  = log --branches --remotes --tags --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --oneline
    loga  = log --branches --remotes --tags --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --name-status
    graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short 

[include]
  path = .gitconfig.local
  path = .gitconfig.user

[core]
	pager = less -r
	excludesfile = ~/.gitignore_global
	editor = /usr/bin/vim
[pager]
    grep = false

[color]
    ui = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
