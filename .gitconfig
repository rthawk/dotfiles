[alias]
    a  = add
    aa = add -A
    c =  checkout
    co = checkout
    cb = checkout -b
    st = status
    s  = status -s
    sm  = submodule status
    cv = commit -v
    cva = commit -v --amend
    ca = commit -a
    cm = commit -m
    cav = commit -av
    cava = commit -av --amend
    d = diff
    dl = difftool
    dc = diff --cached
    b = branch
    br = branch
    wc = whatchanged
    p  = push
    rv = remote -v
    stat  = log --stat --summary
    g = grep
    l = log
    lg = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    logg  = log --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --name-status
    logs  = log --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --stat
    logb  = log --branches --remotes --tags --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --oneline
    loga  = log --branches --remotes --tags --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --name-status
    graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short 

[include]
  path = .gitconfig.local
  path = .gitconfig.user

[core]
	pager = less -r
	excludesfile = ~/.gitignore_global
	editor = vim
[pager]
    grep = false

[diff]
  tool = vimdiff
[difftool]
  prompt = false

[color]
    ui = true
[push]
	default = simple
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
