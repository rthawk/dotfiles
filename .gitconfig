[alias]
    co = checkout
    st = status
    s  = status -s
    ci = commit -a
    d = diff
    dc = diff --cache
    br = branch
    wc = whatchanged
    stat  = log --stat --summary
    logg  = log --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --name-status
    logs  = log --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --stat
    logb  = log --branches --remotes --tags --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --oneline
    loga  = log --branches --remotes --tags --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --name-status
    graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short 


[user]
	name = rthawk
	email = rthawk@rtks.net
[core]
    pager = less -r
	excludesfile = /Users/rthawk/.gitignore_global
	editor = /usr/bin/vim

[color]
    ui = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
