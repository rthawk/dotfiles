<?xml version="1.0"?>
<root>
  <appdef>
  <appname>EVERNOTE</appname>
  <equal>com.evernote.Evernote</equal>
  <equal>Evernote</equal>
  </appdef>

    <list>
      <item>
        <name>App Specific</name>
        <item>
            <name>Leave Insert Mode with Esc(Terminal)</name>
            <identifier>private.turn_ime_off_by_esc</identifier>
            <only>TERMINAL</only>
            <autogen>--KeyToKey-- KeyCode::ESCAPE, KeyCode::ESCAPE, KeyCode::JIS_EISUU</autogen>
            <autogen>--KeyToKey-- KeyCode::BRACKET_LEFT, VK_CONTROL, KeyCode::BRACKET_LEFT, VK_CONTROL, KeyCode::JIS_EISUU</autogen>
        </item>
        <item>
            <name>Ctrl+M to Enter on Google Chrome, Firefox, Safari, Evernote</name>
            <identifier>private.ctrl_m_to_enter</identifier>
            <only>GOOGLE_CHROME, FIREFOX, SAFARI, EVERNOTE</only>
            <autogen>
              __KeyToKey__
              KeyCode::M, ModifierFlag::CONTROL_L,
              KeyCode::ENTER
            </autogen>
        </item>
      </item>

        <item>
          <name>Change Command_L Key(except vm)</name>
          <item>
            <name>Command_L to Command_L</name>
            <appendix>(+ When you type Command_L only, send EISUU)</appendix>
            <appendix>(+ except Virtual Machine)</appendix>
            <identifier>remap.jis_commandL2commandL_eisuu_except_vm</identifier>
            <not>VIRTUALMACHINE, REMOTEDESKTOPCONNECTION</not>
            <autogen>__KeyOverlaidModifier__ KeyCode::COMMAND_L, KeyCode::COMMAND_L, KeyCode::JIS_EISUU</autogen>
          </item>
        </item>
        <item>
          <name>Change Command_R Key(except vm)</name>
          <item>
            <name>Command_R to Command_R</name>
            <appendix>(+ When you type Command_R only, send KANA)</appendix>
            <appendix>(+ except Virtual Machine)</appendix>
            <identifier>remap.jis_commandR2commandR_kana_except_vm</identifier>
            <not>VIRTUALMACHINE, REMOTEDESKTOPCONNECTION</not>
            <autogen>__KeyOverlaidModifier__ KeyCode::COMMAND_R, KeyCode::COMMAND_R, KeyCode::JIS_KANA</autogen>
          </item>
        </item>

    </list>
</root>
