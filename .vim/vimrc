if &compatible
  set nocompatible
endif

set nobackup
set noswapfile
set noundofile
set nonumber
set autoread
set ignorecase
set showmatch
set smartcase
set ttyfast

set expandtab
set tabstop=2
set shiftwidth=0

set list
set listchars=tab:>-,trail:-,nbsp:%,extends:>,precedes:<
set backspace=indent,eol,nostop
set laststatus=0
set encoding=utf-8
set fileformats=unix,dos
set clipboard^=unnamed,unnamedplus

filetype plugin indent on

