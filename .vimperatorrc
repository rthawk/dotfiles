
set runtimepath=~/Dropbox/config/dotfiles/.vimperator/

set titlestring=""

" hint with alphabet
set hintchars=ifjklasdhguonmerwc

" reload vimperatrorc
map ,s :so ~/.vimperatorrc<CR>\
echo "reloaded vimperatorrc"

" set gui=addons,tabs,nobookmarks,nomenu,nonavigation
set noautocomplete
set complete+=slhbS

" hjklの移動範囲を増やす
noremap h 5h
noremap j 5j
noremap k 5k
noremap l 5l

" command mode cursor
cnoremap <C-p> <Up>
cnoremap <C-n> <Down>

" ignoreALLkeysを押しやすい位置に配置
map ,` <S-ESC>

"plugin : copy.js
noremap ,c :copy titleAndURL<CR><ESC>

" plugin : IMEの自動切り替え
let g:ex_ime_mode = "inactive"
let g:textarea_ime_mode = "inactive"

" statusline-toolbar.js
" sbmcommentviewer.js


" ------------------------------
" GUI style
hi Hint z-index:5000; font-family:Menlo; font-size:15px; font-weight:bold; color:white; background-color:#6BA7EF; border-width:0px; border-style:solid; padding:0px 2px 0px 2px; position:absolute;text-transform: uppercase;

hi CmdLine font-size: 15px;

hi PromptText background: #6BA7EF; color: white;
