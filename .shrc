#!/bin/bash

stty stop undef  # C-S for history search
stty start undef # C-Q

# cd support
. ~/.zsh/plugins/z/z.sh

case "$(uname)" in
  Linux)
    . ~/.shrc.linux
    ;;
  Darwin) # for OSX
    . ~/.shrc.osx
    ;;
esac

if test -d ~/profile.d/; then
  for prof in ~/profile.d/*.sh; do
    test -r "$prof" && . "$prof"
  done
  unset prof
fi

