#!/bin/bash
# common file for bash, zsh,etc.. all other shell

# C-s で画面が停止するのをやめる. 代わりに履歴検索が使える
stty stop undef

# lsを色付け
export CLICOLOR=1
export LSCOLORS=DxGxcxdxCxegedabagacad

# history on memory
export HISTSIZE=10000

# history on histfile
export SAVEHIST=20000
export HISTFILESIZE=20000

# historyに時刻追加
HISTTIMEFORMAT='%Y%m%d %T ';
export HISTTIMEFORMAT

export EDITOR=/usr/bin/vim
export BUNDLER_EDITOR=vim

# homebrew
export PATH=/usr/local/bin:$PATH

export PATH="$PATH:/usr/local/sbin"

[[ -s /usr/local/bin/ghc-pkg ]] && export PATH=~/.cabal/bin:$PATH

# tmuxinator
[[ -s $HOME/.tmuxinator/scripts/tmuxinator ]] && source "$HOME/.tmuxinator/scripts/tmuxinator"

# nodebrew
if [[ -f $HOME/.nodebrew/nodebrew ]]; then
    export PATH=$HOME/.nodebrew/current/bin:$PATH
fi

# golang
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:/usr/local/opt/go/libexec/bin

#+---------------------------------------------------------+
# grep
#+---------------------------------------------------------+

export GREP_OPTIONS="--binary-files=without-match"
export GREP_OPTIONS="--exclude=tags $GREP_OPTIONS"

for pattern in .cvs .git .hg .svn .idea; do
    export GREP_OPTIONS="--exclude-dir=$pattern $GREP_OPTIONS"
done

alias grep='grep --color=auto'

#+---------------------------------------------------------+
# alias
#+---------------------------------------------------------+

alias l='ls -1'
alias lsa='ls -a'
alias la='ls -1a'
alias ll='ls -hl'
alias lla='ls -alh'
alias p="popd"

alias g='git'
alias gn='git --no-pager'

# man を日本語でも選べるようにする
alias man='env LANG=C man'
alias jman='env LANG=ja_JP.UTF-8 man'

alias be="bundle exec"

type emacs >& /dev/null && alias e=emacs

[ "$(uname)" = 'Darwin' ] && alias pwdcp='pwd | pbcopy'

# experimental settings
if [ -f ~/.privaterc.sh ] ; then
    . ~/.privaterc.sh
fi

