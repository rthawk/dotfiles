#!/bin/bash
# common file for bash, zsh,etc.. all other shell

stty stop undef  # C-S for history search
stty start undef # C-Q

# history on memory
export HISTSIZE=10000

# history on histfile
export SAVEHIST=20000
export HISTFILESIZE=20000

# history with timestamp
HISTTIMEFORMAT='%Y%m%d %T ';
export HISTTIMEFORMAT

export EDITOR=/usr/bin/vim
export BUNDLER_EDITOR=vim

# homebrew
export PATH=/usr/local/bin:$PATH

export PATH="$PATH:/usr/local/sbin"

[[ -s /usr/local/bin/ghc-pkg ]] && export PATH=~/.cabal/bin:$PATH

# nodebrew
if [[ -f $HOME/.nodebrew/nodebrew ]]; then
    export PATH=$HOME/.nodebrew/current/bin:$PATH
fi

# golang
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:/usr/local/opt/go/libexec/bin

export PATH=$HOME/bin:$PATH

#+---------------------------------------------------------+
# grep
#+---------------------------------------------------------+

export GREP_OPTIONS="--binary-files=without-match"
export GREP_OPTIONS="--exclude=tags $GREP_OPTIONS"

for pattern in .cvs .git .hg .svn .idea; do
    export GREP_OPTIONS="--exclude-dir=$pattern $GREP_OPTIONS"
done

alias grep='grep --color=auto'

#+---------------------------------------------------------+
# alias
#+---------------------------------------------------------+

export CLICOLOR=1

case "$(uname)" in
  Linux)
    export LS_COLORS='di=33:fi=0:ln=95:pi=5:so=5:bd=5:cd=5:or=37:mi=0:ex=31:*.rpm=90'
    alias ls="ls --color=auto"
    ;;
  Darwin) # for OSX
    export LSCOLORS=dxgxcxdxCxegedabagacad
    alias ls='ls -G'
    ;;
esac

alias l='ls -1'
alias lsa='ls -a'
alias la='ls -1a'
alias ll='ls -hl'
alias lla='ls -alh'

alias p="popd"

alias g='git'
alias gn='git --no-pager'

alias man='env LANG=C man'
alias jman='env LANG=ja_JP.UTF-8 man'

alias be="bundle exec"

[ "$(uname)" = 'Darwin' ] && alias pwdcp='pwd | pbcopy'

# experimental settings
if [ -f ~/.privaterc.sh ] ; then
    . ~/.privaterc.sh
fi

